- var headtexts = [{text: "About", img: "about-img"}, {text: "Portfolio", img: "portfolio-img"}, {text: "Skills", img: "skills-img"}, {text: "Contact", img: "contact-img"}];
- var imgpath = "assets/";

.content-menu-wrapper
  include ./arrow
  for contentwrapper in headtexts
    .thumbnail-wrapper(class= contentwrapper.text)
      img(src=imgpath+contentwrapper.img+".png")
      h1(class="option-text")= contentwrapper.text
    .info(class= contentwrapper.text)
      .wrapper
        if contentwrapper.text == "About"
          .head
            img(src=imgpath+"about-thin.png") 
            h1(class="option-text")= contentwrapper.text
            include ./arrow
            
          include ./About-content
        else
          .head
            img(src=imgpath+contentwrapper.img+".png") 
            h1(class="option-text")= contentwrapper.text
            include ./arrow
